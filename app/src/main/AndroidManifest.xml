<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greenlab.agromonitor">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ActionBar.Transparent">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.greenlab.agromonitor.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <!-- ressource file to create -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/path_provider">
            </meta-data>
        </provider>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".NewProjectActivity"
            android:label="@string/start_new_project"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".LineChartActivity"
            android:label="Gráfico de linha"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".BarChartActivity"
            android:label="Gráfico de barras"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".PieChartActivity"
            android:label="Gráfico Pizza"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".NewProjectActivityStep2"
            android:label="@string/title_step2"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".NewProjectActivityStep3"
            android:label="@string/title_step3"
            android:theme="@style/AppThemeDark" />
        <activity
            android:name=".CreateVariables"
            android:label="@string/title_step_variables"
            android:theme="@style/AppThemeDark" />
    </application>

</manifest>