<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="140dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_limit_title"
        android:text="Digite os Limites"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:hint="De: "
        android:inputType="numberDecimal"
        android:id="@+id/limit_start"
        android:layout_below="@id/dialog_limit_title"
        android:layout_width="120dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="AtÃ©: "
        android:inputType="numberDecimal"
        android:layout_centerHorizontal="true"
        android:id="@+id/limit_end"
        android:layout_below="@id/limit_start"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />

</RelativeLayout>