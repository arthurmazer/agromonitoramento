<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    android:layout_marginStart="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginEnd="4dp"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/title_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/neuton"
        android:textSize="18sp"
        android:text="Mocked Title"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/total_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_product"
        android:layout_marginStart="12dp"

        android:fontFamily="@font/neuton"
        android:layout_marginLeft="12dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="3 itens"/>


    <LinearLayout
        android:id="@+id/layout_add_product_value"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/action_list"
            app:srcCompat="@drawable/plus"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp" />
        <TextView
            android:id="@+id/label_adicionar"
            android:text="Adicionar"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />

    </LinearLayout>




</RelativeLayout>