<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_project"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_id_culture"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp">

            <TextView

                android:id="@+id/project_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="#12"
                android:textSize="24sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_description"
        android:layout_width="232dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/right_side_layout"
        app:layout_constraintStart_toEndOf="@+id/relative_id_culture"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/project_title"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="15dp"
            android:text="Nome do Projeto"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>


        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cultura:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#006400"
                android:layout_marginLeft="4dp"
                android:text="Cana"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Variáveis:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"

                android:text="PT, XS, DL"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_turno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_turno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turno:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/turno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noturno"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"

                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/more_details_hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_talhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/label_talhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talhão:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/talhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12313"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"

                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/layout_farm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/farm_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fazenda:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/farm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="São Miguel"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_id_machine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_machine_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID.Máquina:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_machine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="2441121341"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_operator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/label_nome_operador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operador:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"

                    android:text="Noturno"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_avaliador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/label_avaliador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talhão:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/avaliador"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"

                    android:layout_height="wrap_content"
                    android:text="Manoel"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_frente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/label_frente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avaliador:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/frente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"

                    android:text="Roberto"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/right_side_layout"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_description">

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/open_in_new" />

            <TextView
                android:id="@+id/label_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_below="@id/imageView"
                android:text="Abrir" />


            <TextView
                android:id="@+id/project_creation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/label_open"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:text="16/09/2218"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="4dp" />

        </RelativeLayout>




    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>